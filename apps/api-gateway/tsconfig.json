{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@repo/domain/*": ["../../packages/domain/src/*"],
      "@repo/infraestructure/*": ["../../packages/infraestructure/src/*"],
      "@repo/realtime/*": ["../../packages/realtime/src/*"],
      "@repo/security/*": ["../../packages/security/src/*"],
      "@repo/shared/*": ["../../packages/shared/src/*"]
    },
    "useUnknownInCatchVariables": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "incremental": true,

    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "moduleDetection": "force",
    "noEmit": false, // Â¡Cambio clave: permite emitir JS y .d.ts!
    "tsBuildInfoFile": "./.turbo/tsconfig.tsbuildinfo",
    "declarationMap": true, // Para debugging en VSCode
    "sourceMap": true // Opcional: para sourcemaps en dist/
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}

