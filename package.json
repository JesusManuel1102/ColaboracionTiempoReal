{
  "name": "my-monorepo-template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build --watch",
    "dev": "turbo run dev",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf **/dist **/.turbo",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
